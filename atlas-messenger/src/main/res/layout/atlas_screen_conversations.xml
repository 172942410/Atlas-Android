<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/atlas_background_white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <include layout="@layout/atlas_ab_stub"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:visibility="gone"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:background="@color/atlas2_views"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:text="User ID:"
                android:textSize="16sp" />
            
            <!--  separator -->
            <View
                android:layout_width="1px"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                /> 
            
            <TextView
                android:id="@+id/atlas_conversation_screen_login"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@color/atlas0_background" 
                android:padding="12dp" 
                android:gravity="center_vertical" 
                android:textSize="16sp"
                />
            
        </LinearLayout>
        
        <ListView
            android:id="@+id/atlas_conversations_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/atlas_background_white"
            android:divider="@color/atlas_background_white"
            android:dividerHeight="0dp"
            />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/atlas2_views"
            android:orientation="horizontal" 
            android:visibility="gone">

            <TextView
                android:id="@+id/atlas_conversations_screen_search"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:hint="Filter me..."
                android:maxLines="1"
                android:padding="12dp"
                android:textSize="16sp" />
                        
        </LinearLayout>
    </LinearLayout>
    
    <include layout="@layout/atlas_ab_layout"/>
    
    <View 
        android:id="@+id/atlas_conversation_screen_new_conversation"
        android:layout_width ="96dp"
        android:layout_height="96dp"
        android:layout_gravity="bottom|right"
        android:gravity="center"
        android:background="@drawable/atlas_ctl_btn_plus_big"
        />
         

</FrameLayout>