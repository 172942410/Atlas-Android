<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp" 
    android:orientation="horizontal" >

    <!-- avatar placeholder -->
    <FrameLayout
    	android:layout_height="72dp"
    	android:layout_width="72dp"
    	>
    	
        <TextView 
    		android:id="@+id/atlas_conversation_view_convert_initials"
    		android:layout_width="40dp"
    		android:layout_height="40dp"
    		android:layout_gravity="center"
    		android:background="@drawable/atlas_shape_circle_gray"
    		android:gravity="center"
            android:textSize="@dimen/atlas_text_size_general"
    		android:text="TS"
    		/>
        
        <FrameLayout 
            android:id="@+id/atlas_conversation_view_convert_initials_multi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            >
            <TextView
                android:id="@+id/atlas_conversation_view_convert_initials_left" 
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/atlas_shape_circle_gray"
                android:gravity="center"
                android:textSize="@dimen/atlas_text_size_tiny"
                android:text="ZF"
                />
            <View 
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginLeft="29dp"
                android:layout_marginTop="29dp"
                android:background="@drawable/atlas_shape_circle_white"
                />
            <TextView 
                android:id="@+id/atlas_conversation_view_convert_initials_right"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/atlas_shape_circle_gray"
                android:gravity="center"
                android:textSize="@dimen/atlas_text_size_tiny"
                android:text="AB"
                />
        </FrameLayout>
        
            
    </FrameLayout>
    
    <!-- right content part -->
	<FrameLayout 
		android:layout_width="0dp"
		android:layout_height="match_parent"
		android:layout_weight="1"
		>
    	
		<!-- delimiter -->
        <View 
        	android:layout_width="match_parent" 
        	android:layout_height="1dp"
        	android:layout_gravity="bottom" 
        	android:background="@color/atlas_delimeter_gray"
        	/>
		
	<LinearLayout 
		android:orientation="vertical" 
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:paddingRight="16dp"
		>
		
		<!-- Tomaz and time -->
		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    >
		    
		    <TextView
    			android:id="@+id/atlas_conversation_view_convert_participant"
    			android:layout_width="0dp"
    			android:layout_height="wrap_content"
    			android:layout_weight="1"
                android:singleLine="true"
    			android:textSize="@dimen/atlas_text_size_bigger"
    			android:text="Tomaz Stolfa" 
    			/>
		    
		    <TextView
    			android:id="@+id/atlas_conversation_view_convert_time"
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:layout_gravity="center_vertical"
                android:paddingLeft="8dp"
                android:singleLine="true" 
    			android:textSize="@dimen/atlas_text_size_smaller"
    			android:textColor="@color/atlas_text_blue"
    			android:text="16:43" 
    			/>
		    
		</LinearLayout>
			
	    <TextView
	        android:id="@+id/atlas_conversation_view_last_message"
	        android:layout_width="wrap_content"
	        android:layout_height="0dp"
	        android:layout_weight="1"
	        android:singleLine="true"
	        
	        android:text="You did it! When are we going to see the..."
	        android:textSize="@dimen/atlas_text_size_general"
	        />
		
	    
	</LinearLayout>
	
	</FrameLayout>
    
</LinearLayout>