<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:background="@color/color2_views"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:text="User ID:"
                android:textSize="16sp" />
            
            <!--  separator -->
            <View
                android:layout_width="1px"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:background="#CECECE" /> 
            
            <TextView
                android:id="@+id/main_screen_login"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:padding="12dp"
                android:gravity="center_vertical"
                android:background="#F7FFF2"
                android:textSize="16sp" />
            
            
        </LinearLayout>
        
        <!-- delimiter -->
        <View android:layout_width="match_parent" android:layout_height="1px" android:background="#AFAFAF"/>

        <ListView
            android:id="@+id/main_screen_list_conversations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" 
            />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/color2_views"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/main_screen_text_filter"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:hint="Filter me..."
                android:maxLines="1"
                android:padding="12dp"
                android:textSize="16sp" />
            
            <TextView
                android:id="@+id/main_screen_new_chat"
                android:layout_width="44dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginRight="4dp"
                android:background="@color/color3_controls"
                android:gravity="center"
                android:text="[ + ]"
                android:textSize="16sp" />
            
        </LinearLayout>
    </LinearLayout>

</FrameLayout>