<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Style references (from styles.xml)-->
    <declare-styleable name="AtlasTheme">
        <attr name="conversationViewStyle" format="reference"/>
        <attr name="messageInputToolbarStyle" format="reference"/>
        <attr name="conversationRecyclerViewStyle" format="reference"/>
        <attr name="conversationItemViewStyle" format="reference"/>
        <attr name="conversationFilterViewStyle" format="reference"/>
        <attr name="messageRecyclerViewStyle" format="reference"/>
        <attr name="messageItemViewStyle" format="reference"/>
        <attr name="participantFilterViewStyle" format="reference"/>
        <attr name="participantChipViewStyle" format="reference"/>
        <attr name="participantListViewStyle" format="reference"/>
        <attr name="participantItemViewStyle" format="reference"/>
    </declare-styleable>

    <!-- Attributes -->
    <attr name="leftButtonDrawable" format="reference"/>
    <attr name="rightButtonDrawable" format="reference"/>
    <attr name="hint" format="reference|string"/>
    <attr name="groupedMessageSpacing" format="dimension"/>
    <attr name="ungroupedMessageSpacing" format="dimension"/>
    <attr name="messageBubbleCornerRadius" format="dimension"/>
    <attr name="messageBubbleBackgroundColor" format="color"/>
    <attr name="messageBubbleTextColor" format="color"/>
    <attr name="messageBubbleArrow" format="reference"/>
    <attr name="messageBubblePaddingLeft" format="dimension"/>
    <attr name="messageBubblePaddingRight" format="dimension"/>
    <attr name="messageBubblePaddingTop" format="dimension"/>
    <attr name="messageBubblePaddingBottom" format="dimension"/>

    <!-- meta views -->
    <declare-styleable name="ConversationView">
        <!--MessageInputToolbar-->
        <attr name="leftButtonDrawable"/>
        <attr name="rightButtonDrawable"/>
        <attr name="hint"/>

        <!--MessageRecyclerView-->
        <attr name="groupedMessageSpacing"/>
        <attr name="ungroupedMessageSpacing"/>
        <attr name="messageBubbleCornerRadius"/>
        <attr name="messageBubbleBackgroundColor"/>
        <attr name="messageBubbleTextColor"/>
    </declare-styleable>

    <!-- individual views -->
    <declare-styleable name="MessageInputView">
        <attr name="leftButtonDrawable"/>
        <attr name="rightButtonDrawable"/>
        <attr name="hint"/>
    </declare-styleable>

    <declare-styleable name="MessageRecyclerView">
        <attr name="groupedMessageSpacing"/>
        <attr name="ungroupedMessageSpacing"/>
        <attr name="messageBubbleCornerRadius"/>
        <attr name="messageBubbleBackgroundColor"/>
        <attr name="messageBubbleTextColor"/>
    </declare-styleable>

    <declare-styleable name="MessageItemView">
        <attr name="messageBubbleCornerRadius"/>
        <attr name="messageBubbleBackgroundColor"/>
        <attr name="messageBubbleArrow"/>
        <attr name="messageBubbleTextColor"/>

        <attr name="messageBubblePaddingLeft"/>
        <attr name="messageBubblePaddingRight"/>
        <attr name="messageBubblePaddingTop"/>
        <attr name="messageBubblePaddingBottom"/>
    </declare-styleable>

    <declare-styleable name="ConversationItemView">
        <!-- TODO -->
    </declare-styleable>

    <declare-styleable name="ConversationFilterView">
        <!-- TODO -->
    </declare-styleable>

    <declare-styleable name="ParticipantFilterView">
        <!-- TODO -->
    </declare-styleable>

    <declare-styleable name="ParticipantChipView">
        <!-- TODO -->
    </declare-styleable>

    <declare-styleable name="ParticipantListView">
        <!-- TODO -->
    </declare-styleable>

</resources>