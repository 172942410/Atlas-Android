    <declare-styleable name="MessageInputToolbar">
        <attr name="leftButtonDrawable" format="reference"/>
        <attr name="rightButtonDrawable" format="reference"/>
        <attr name="hint" format="reference|string"/>
    </declare-styleable>

    <declare-styleable name="ConversationQueryView">
        <attr name="groupedMessageSpacing" format="dimension"/>
        <attr name="ungroupedMessageSpacing" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="ConversationView">
        <attr name="messageInputToolbarLeftButtonDrawable" format="reference"/>
        <attr name="messageInputToolbarRightButtonDrawable" format="reference"/>
        <attr name="messageInputToolbarHint" format="reference|string"/>

        <attr name="conversationQueryViewGroupedMessageSpacing" format="dimension"/>
        <attr name="conversationQueryViewUngroupedMessageSpacing" format="dimension"/>
    </declare-styleable>

</resources>