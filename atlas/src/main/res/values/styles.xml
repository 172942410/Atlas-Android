<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Applied Default Themes -->
    <style name="Theme.Atlas.Light" parent="Theme.AppCompat.Light">
        <item name="defaultMessageInputToolbarStyle">@style/AtlasMessageInputToolbar</item>
        <item name="defaultConversationQueryViewStyle">@style/AtlasConversationQueryView</item>
        <item name="defaultConversationViewStyle">@style/AtlasConversationView</item>
    </style>

    <!-- Used by MessageInputToolbar TypedArray defStyleResId -->
    <style name="AtlasMessageInputToolbar">
        <item name="leftButtonDrawable">@drawable/atlas_arrow_left</item>
        <item name="rightButtonDrawable">@drawable/atlas_arrow_left</item>
        <item name="hint">@string/atlas_message_input_toolbar_hint</item>
    </style>

    <!-- Used by ConversationQueryView TypedArray defStyleResId -->
    <style name="AtlasConversationQueryView">
        <item name="groupedMessageSpacing">@dimen/atlas_message_bubble_spacing_grouped</item>
        <item name="ungroupedMessageSpacing">@dimen/atlas_message_bubble_spacing_ungrouped</item>
    </style>

    <!-- Used by ConversationView TypedArray defStyleResId -->
    <style name="AtlasConversationView">
        <item name="leftButtonDrawable">@drawable/atlas_arrow_left</item>
        <item name="rightButtonDrawable">@drawable/atlas_arrow_left</item>
        <item name="hint">@string/atlas_message_input_toolbar_hint</item>
        <item name="groupedMessageSpacing">@dimen/atlas_message_bubble_spacing_grouped</item>
        <item name="ungroupedMessageSpacing">@dimen/atlas_message_bubble_spacing_ungrouped</item>
    </style>


    <!-- TODO: ViewHolders currently don't have auto-applied themes like the above -->
    <!-- TODO: Drawables can only refer to `dimen` and `color`; attrs with ? don't seem to work -->
    <!-- Used by drawable/atlas_item_message -->
    <style name="AtlasMessageBubbleArrow">
        <item name="android:tint">@color/atlas_message_bubble_background</item>
        <item name="android:paddingBottom">@dimen/atlas_message_bubble_corner_radius</item>
        <item name="android:src">@drawable/atlas_arrow_left</item>
    </style>

    <style name="AtlasMessageBubbleText">
        <item name="android:textColor">@color/atlas_message_bubble_text</item>
        <item name="android:background">@drawable/atlas_message_bubble</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>

        <item name="messageBubbleCornerRadius">@dimen/atlas_message_bubble_corner_radius</item>
        <item name="messageBubbleBackgroundColor">@color/atlas_message_bubble_background</item>
    </style>


</resources>
