<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    
    <com.layer.atlas.AtlasImageView2 
        android:id="@+id/atlas_screen_image_view_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffffff"
        />
    
    <com.layer.atlas.AtlasProgressView
        android:id="@+id/atlas_screen_image_view_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="8dp"
        >
       
        <Button 
            android:id="@+id/atlas_screen_image_view_angle_minus"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text=" - "
            />
        
        <Button 
            android:id="@+id/atlas_screen_image_view_angle_plus"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text=" + "
            />
        
        <CheckBox 
            android:id="@+id/atlas_screen_image_view_decor"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Decor"
            android:checked="true"
            android:textColor="@color/atlas_text_black87"
            />
        
        <CheckBox 
            android:id="@+id/atlas_screen_image_view_hd"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="HD"
            android:checked="true"
            android:textColor="@color/atlas_text_black87"
            />
        
    </LinearLayout>
    
</FrameLayout>

