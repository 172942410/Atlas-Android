<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <LinearLayout
        android:id="@+id/atlas_view_messages_convert_timebar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        >
        <TextView 
            android:id="@+id/atlas_view_messages_convert_timebar_day"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginRight="2dp"
            android:gravity="center_vertical|right"
            android:textSize="@dimen/atlas_text_size_smaller2"
            android:textColor="@color/atlas_text_gray"
            android:textStyle="bold"
            android:text="Yesterday"
            />
        <TextView 
            android:id="@+id/atlas_view_messages_convert_timebar_time"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:gravity="center_vertical|left"
            android:textSize="@dimen/atlas_text_size_smaller2"
            android:textColor="@color/atlas_text_gray"
            android:text="09:08"
            />
    </LinearLayout>
    
    <View 
        android:id="@+id/atlas_view_messages_convert_spacer_top"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="1dp"    
        android:paddingBottom="1dp"    
        
        android:orientation="horizontal"
        >
        
        <!-- avatar placeholder -->
        <FrameLayout 
            android:id="@+id/atlas_view_messages_convert_avatar_container"
            android:layout_width="24dp" 
            android:layout_height="24dp"
            android:layout_marginLeft="8dp"
            android:layout_gravity="bottom"
            >
            <TextView 
                android:id="@+id/atlas_view_messages_convert_initials"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/atlas_text_size_smaller2"
                android:background="@drawable/atlas_shape_circle_gray"
                android:text="TS" 
                android:gravity="center" />
            
        </FrameLayout>
    	
        <!--  android:background="#D1FFF1" - blue -->
    
        <FrameLayout
            android:id="@+id/atlas_view_messages_cell_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp">
            
        </FrameLayout>
        
        <View 
            android:id="@+id/atlas_view_messages_convert_spacer_right"
            android:layout_width="32dp"
            android:layout_height="match_parent"
            />
    
    </LinearLayout>
    
    <View 
        android:id="@+id/atlas_view_messages_convert_spacer_bottom"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        />
    
</LinearLayout>